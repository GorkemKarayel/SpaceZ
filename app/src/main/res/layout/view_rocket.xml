<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_card"
    tools:parentTag="com.google.android.material.card.MaterialCardView"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/rocketContainer"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_rocket_item"
      android:layout_marginHorizontal="@dimen/margin_horizontal"
      android:layout_marginVertical="@dimen/margin_vertical"
      >

    <ImageView
        android:id="@+id/rocketImageView"
        android:layout_width="@dimen/image_size_rocket_item"
        android:layout_height="@dimen/image_size_rocket_item"
        android:layout_marginStart="@dimen/margin_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/rocketNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rocketImageView"
        app:layout_constraintTop_toTopOf="@+id/rocketImageView"
        tools:text="Roket ismi = Falcon 1"
        />

    <TextView
        android:id="@+id/rocketCountryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rocketImageView"
        app:layout_constraintTop_toBottomOf="@+id/rocketNameTextView"
        tools:text="Ülke = Republic of the Marshall Islands"
        />

    <TextView
        android:id="@+id/rocketCompanyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rocketImageView"
        app:layout_constraintTop_toBottomOf="@+id/rocketCountryTextView"
        tools:text="Şirket = SpaceX"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
